APP_NAME = van Kleef GIT
RUN_USER = git
RUN_MODE = prod

[database]
DB_TYPE  = mysql
HOST     = mysql.vankleef.me
NAME     = gogs
USER     = gogs
PASSWD   = {{ pillar['gogs']['sql_pass'] }}
SSL_MODE = disable
PATH     = data/gogs.db

[repository]
ROOT = /home/git/gogs-repositories

[server]
DOMAIN           = git.vankleef.me
HTTP_PORT        = 3000
ROOT_URL         = http://git.vankleef.me/
DISABLE_SSH      = false
SSH_PORT         = 2200
START_SSH_SERVER = false
OFFLINE_MODE     = false

[mailer]
ENABLED = true
HOST    = mail.vankleef.me
FROM    = "Van Kleef GIT" <git@vankleef.me>
USER    = 
PASSWD  = 

[service]
REGISTER_EMAIL_CONFIRM = true
ENABLE_NOTIFY_MAIL     = true
DISABLE_REGISTRATION   = true
ENABLE_CAPTCHA         = false
REQUIRE_SIGNIN_VIEW    = false

[picture]
DISABLE_GRAVATAR        = false
ENABLE_FEDERATED_AVATAR = true

[session]
PROVIDER = file

[log]
MODE      = file
LEVEL     = Info
ROOT_PATH = /opt/gogs/log

[security]
INSTALL_LOCK = true
SECRET_KEY   = {{ pillar['gogs']['secret_key'] }}
